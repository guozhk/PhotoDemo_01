<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <SurfaceView
        android:id="@+id/surfaceview_display_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relative_progressbar"/>

    <RelativeLayout
        android:id="@+id/relative_camera_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#ff1b305d" >

        <ImageView
            android:id="@+id/img_switch_camera_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/img_video_new_back" />

        <ImageView
            android:id="@+id/img_switch_camera_flashlight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/img_video_new_flashlight_close" />

        <ImageView
            android:id="@+id/img_switch_camera_front_or_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/img_video_new_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_progressbar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="#ff29283A" >

        <ImageView
            android:id="@+id/img_video_time_atlast"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#ff1f8fe4" />

        <LinearLayout
            android:id="@+id/linearlayout_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>

        <ImageView
            android:id="@+id/img_time_start"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/linearlayout_seekbar"
            android:background="@android:color/white"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>
